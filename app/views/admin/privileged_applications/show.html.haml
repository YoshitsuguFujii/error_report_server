- model_class = PrivilegedApplication
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

.show-table
  %table.table.table-striped.table-bordered.table-hover
    = simple_table_item_tag(@privileged_application, :name)
    = simple_table_item_tag(@privileged_application, :key)
    = simple_table_item_tag(@privileged_application, :secret)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_privileged_applications_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_privileged_application_path(@privileged_application), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_privileged_application_path(@privileged_application), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
