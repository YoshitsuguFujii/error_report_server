- model_class = PrivilegedApplication
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @privileged_application.name
%p
  %strong= model_class.human_attribute_name(:key) + ':'
  %br
  = @privileged_application.key
%p
  %strong= model_class.human_attribute_name(:secret) + ':'
  %br
  = @privileged_application.secret
%p
  %strong= model_class.human_attribute_name(:deleted_at) + ':'
  %br
  = @privileged_application.deleted_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), privileged_applications_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_privileged_application_path(@privileged_application), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), privileged_application_path(@privileged_application), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
