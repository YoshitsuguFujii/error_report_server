- model_class = PrivilegedApplication
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped.privileged_application_lists
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:key)
      %th= model_class.human_attribute_name(:secret)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @privileged_applications.each do |privileged_application|
      %tr(data-href= "#{admin_privileged_application_path(privileged_application)}")
        %td= privileged_application.id
        %td= privileged_application.name
        %td= privileged_application.key
        %td= privileged_application.secret
        %td=l privileged_application.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_privileged_application_path(privileged_application), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_privileged_application_path(privileged_application), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_privileged_application_path, :class => 'btn btn-primary'
